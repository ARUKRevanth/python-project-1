def max_score(A, K):
    N = len(A)
    
   
    current_score = 0
    for i in range(K):
        current_score += i * A[i]
    
    max_score = current_score
    
    for i in range(1, N - K + 1):
      
        current_score = current_score - (i-1) * A[i-1] + (i+K-1) * A[i+K-1]
        max_score = max(max_score, current_score)
    
    return max_score

